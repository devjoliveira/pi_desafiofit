@using WellBeingWorkout.Models.ViewModels;
@using WellBeingWorkout.Models.Enuns;
@using System.Linq;

@model Tuple<List<ChallengeViewModel>, UserProgressViewModel>

@{
    ViewData["Title"] = "AllChallenges";

    var easyChallenges = Model.Item1.Where(x => x.ChallengeLevel == ChallengeLevel.EASY);
    var midChallenges = Model.Item1.Where(x => x.ChallengeLevel == ChallengeLevel.MID);
    var hardChallenges = Model.Item1.Where(x => x.ChallengeLevel == ChallengeLevel.HARD);

    var totalXpPossible = Model.Item1.Sum(x => x.TotalXp);
    var totalXpMade = Model.Item1.Where(x => x.IsCompleted).Sum(x => x.TotalXp);
}

<div class="container">
    <header class="text-center mb-5">
        <h1 class="display-5 fw-bold" style="color: #0369a1;">Desafios Diários</h1>
        <p class="lead text-muted">Complete os desafios, ganhe XP e transforme seus hábitos!</p>
    </header>

    <section id="progress">
        <h2 class="mb-4 difficulty-title fw-semibold">
            <i class="fas fa-seedling me-2"></i>Meu progresso
        </h2>

        <div class="progress">
            <div class="progress-bar"
                 role="progressbar"
                 style="width: @Model.Item2.TotalProgressPorcentage%;"
                 aria-valuenow="@Model.Item2.TotalProgressPorcentage"
                 aria-valuemin="0"
                 aria-valuemax="100">
                @Model.Item2.TotalProgressPorcentage%
            </div>
        </div>

        <h5 id="nivel-atual" class="card-title fw-bold">
            Nível atual: @Model.Item2.Level - Total XP: @Model.Item2.TotalXpEarned
        </h5>

        <h5 id="xp-proximo-nivel" class="card-title fw-bold">
            XP necessário para o próximo nível: @Model.Item2.TotalXpForNextLevel
        </h5>
    </section>



    <section id="easy-challenges">
        <h2 class="mb-4 difficulty-title fw-semibold"><i class="fas fa-seedling me-2"></i>Nível Fácil</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in easyChallenges)
            {

                <div class="col">
                    <div class="challenge-card">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold">@item.Name</h5>
                                <span class="badge xp-badge rounded-pill">@item.TotalXp XP</span>
                            </div>
                            <p class="card-text text-muted small mb-3">@item.Description</p>
                            @if (item.IsCompleted)
                            {
                                <button class="btn btn-completed w-100 mt-auto">
                                    <i class="fas fa-check-circle me-2"></i>Concluído!
                                </button>
                            }
                            else
                            {
                                <button id="@item.Id" class="btn btn-complete w-100 mt-auto" onclick="completeChallenge(this)">
                                    <i class="fas fa-check me-2"></i>Marcar como Concluído
                                </button>
                            }

                        </div>
                    </div>
                </div>

            }
        </div>
    </section>

    <section id="mid-challenges" class="mt-5">
        <h2 class="mb-4 difficulty-title fw-semibold"><i class="fas fa-running me-2"></i>Nível Médio</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in midChallenges)
            {

                <div class="col">
                    <div class="challenge-card">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold">@item.Name</h5>
                                <span class="badge xp-badge rounded-pill">@item.TotalXp XP</span>
                            </div>
                            <p class="card-text text-muted small mb-3">@item.Description</p>
                            @if (item.IsCompleted)
                            {
                                <button class="btn btn-completed w-100 mt-auto">
                                    <i class="fas fa-check-circle me-2"></i>Concluído!
                                </button>
                            }
                            else
                            {
                                <button id="@item.Id" class="btn btn-complete w-100 mt-auto" onclick="completeChallenge(this)">
                                    <i class="fas fa-check me-2"></i>Marcar como Concluído
                                </button>
                            }
                        </div>
                    </div>
                </div>

            }
    </section>

    <section id="hard-challenges" class="mt-5">
        <h2 class="mb-4 difficulty-title fw-semibold"><i class="fas fa-mountain me-2"></i>Nível Difícil</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in hardChallenges)
            {

                <div class="col">
                    <div class="challenge-card">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold">@item.Name</h5>
                                <span class="badge xp-badge rounded-pill">@item.TotalXp XP</span>
                            </div>
                            <p class="card-text text-muted small mb-3">@item.Description</p>
                            @if (item.IsCompleted)
                            {
                                <button class="btn btn-completed w-100 mt-auto">
                                    <i class="fas fa-check-circle me-2"></i>Concluído!
                                </button>
                            }
                            else
                            {
                                <button id="@item.Id" class="btn btn-complete w-100 mt-auto" onclick="completeChallenge(this)">
                                    <i class="fas fa-check me-2"></i>Marcar como Concluído
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>


</div>

@section Scripts {
    <script>
        function completeChallenge(button) {
            button.classList.remove('btn-complete');
            button.classList.add('btn-completed');
            button.innerHTML = '<i class="fas fa-check-circle me-2"></i>Concluído!';
            button.disabled = true;

            const id = button.id;
            const userId = @Model.Item2.UserId;

            fetch('/Challenge/MarkChallengeAsDone?userId=' + userId + '&challenge=' + id, {
                method: 'POST'
            })
                .then(response => {
                    if (!response.ok) throw new Error('Erro na requisição');
                    return response.json();
                })
                .then(data => {
                    document.querySelector('#progress .progress-bar').style.width = data.totalProgressPorcentage + "%";
                    document.querySelector('#progress .progress-bar').innerText = data.totalProgressPorcentage + "%";
                    document.querySelector('#progress .progress-bar').setAttribute("aria-valuenow", data.totalProgressPorcentage);

                    document.getElementById('nivel-atual').innerText = `Nível atual: ${data.level} - Total XP: ${data.totalXpEarned}`;
                    document.getElementById('xp-proximo-nivel').innerText = `XP necessário para o próximo nível: ${data.totalXpForNextLevel}`;
                })
                .catch(error => console.error(error));
        }
    </script>
}


                            